{
    "extends": "./tsconfig.json",  // Extend root tsconfig
    "exclude": [
      "build",                     // Do not include compiled files
      "node_modules",              // Do not include dependencies
    ],
    "include": [
      "./src/**/*.ts",            // Include all source code .ts files
      "./src/**/*.tsx",           // Include all source code .tsx files
      "./tests/**/*.test.ts",       // Include all ts test files
      "./tests/**/*.test.tsx"       // Include all tsx test files
    ]
  }
  